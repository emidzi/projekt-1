def mordnilap(slowo):
    slowo==slowo.strip()
    return slowo==slowo[::-1]

slowo_podane=input("Podaj słowo aby sprawdzić czy jest ono palindromem \n")
slowo_sprawdzone=mordnilap(slowo_podane)
print(slowo_sprawdzone)




